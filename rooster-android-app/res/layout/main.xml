            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_weight="1" >

        <com.itborci.gui.TimeView a:layout_weight="0" my:from="@string/time5from" my:to="@string/time5to"/>

        <com.itborci.gui.SubjectView a:layout_weight="1" my:hour="5" my:day="0"/>
        <com.itborci.gui.SubjectView a:layout_weight="1" my:hour="5" my:day="1"/>
        <com.itborci.gui.SubjectView a:layout_weight="1" my:hour="5" my:day="2"/>
        <com.itborci.gui.SubjectView a:layout_weight="1" my:hour="5" my:day="3"/>
        <com.itborci.gui.SubjectView a:layout_weight="1" my:hour="5" my:day="4"/>
    </TableRow>
    <TableRow
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_weight="1" >

        <com.itborci.gui.TimeView a:layout_weight="0" my:from="@string/time6from" my:to="@string/time6to"/>

        <com.itborci.gui.SubjectView a:layout_weight="1" my:hour="6" my:day="0"/>
        <com.itborci.gui.SubjectView a:layout_weight="1" my:hour="6" my:day="1"/>
        <com.itborci.gui.SubjectView a:layout_weight="1" my:hour="6" my:day="2"/>
        <com.itborci.gui.SubjectView a:layout_weight="1" my:hour="6" my:day="3"/>
        <com.itborci.gui.SubjectView a:layout_weight="1" my:hour="6" my:day="4"/>
    </TableRow>
</TableLayout>
</LinearLayout>
